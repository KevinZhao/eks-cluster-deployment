# AWS Configuration
aws_region   = "ap-southeast-1"
cluster_name = "eks-demo-1"
k8s_version  = "1.34"
vpc_id       = "vpc-02152cca66eb91fe7"

# Instance Configuration
instance_type = "c8g.large"  # ARM64 Graviton
key_name      = "my-ssh-key" # Your EC2 key pair name

# Root Volume (System Disk)
root_volume_size       = 30
root_volume_type       = "gp3"
root_volume_iops       = 3000
root_volume_throughput = 125

# Data Volume (Additional Disk)
data_volume_size       = 100  # Set to 0 to disable data disk
data_volume_type       = "gp3"
data_volume_iops       = 3000
data_volume_throughput = 125

# Monitoring
enable_monitoring = false

# Custom User Data (optional)
# This script runs after EKS bootstrap
custom_userdata = <<-EOT
  # Mount data disk if exists
  if [ -e /dev/xvdb ]; then
    mkfs -t xfs /dev/xvdb
    mkdir -p /data
    mount /dev/xvdb /data
    echo '/dev/xvdb /data xfs defaults,nofail 0 2' >> /etc/fstab
  fi

  # Install additional tools
  yum install -y htop iotop

  # Custom configurations here
EOT

# Tags
common_tags = {
  Environment = "production"
  ManagedBy   = "terraform"
  Project     = "eks-cluster"
  Owner       = "platform-team"
}
